{
    "layer": "bottom",
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 31,

    "modules-left": [
        "custom/launcher",
        "wlr/taskbar"
    ],

    // "modules-center": [
    // ],

    "modules-right": [
        "tray",
        "idle_inhibitor",
        "cpu",
        "memory",
        // "disk",
        // "temperature",
        "pulseaudio",
        "backlight",
        "battery",
        "clock"
    ],

    // Modules configuration
    "tray": {
        "icon-size": 16,
        "show-passive-items": true,
        "spacing": 5
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "icon-theme": "Tela-yellow",
        "tooltip-format": "{title}",
        "on-click": "minimize-raise",
        "on-click-middle": "close"
    },

    "idle_inhibitor": {
        "format": "{icon} ",
        "format-icons": {
            "activated": "ï®",
            "deactivated": "ï°"
        }
    },

    "clock": {
        "interval": 1,
        "locale": "en_US.UTF-8",
        "timezones": [
            "Asia/Shanghai"
        ],
        "tooltip-format": "{:%A %B %d %Y | %H:%M}",
        // "format": "ï€— {:%I:%M %p}",	//12 hour format
        "format": "ï€— {:%H:%M}", //24 hour format
        "format-alt": "ï„³ {:%d/%m/%Y ï€— %H:%M:%S}"
    },

    "cpu": {
        "interval": 2,
        "format": "ï¡š {usage}%",
        "on-click": "alacritty --class=btop,btop -e btop"
    },

    "memory": {
        "interval": 5,
        "format": "ï‡€ {}%",
        "on-click": "alacritty --class=btop,btop -e btop"
    },

    "temperature": {
        "interval": 2,
        "thermal-zone": 1,
        "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
        "critical-threshold": 80,
        "format-critical": "ï‹‡ {temperatureC}Â°C",
        "format": "ï‹‰ {temperatureC}Â°C"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-",
        "on-click": "bash $HOME/.config/waybar/scripts/background-changer"
    },

    "battery": {
        "interval": 10,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ï—§ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        // "format-alt": "{icon} {time}",
        "format-icons": [
            "ï–", "ï•¹", "ï•»", "ï•¼", "ï•½", "ï•¾", "ï•¿", "ï–€", "ï–", "ï•¸"
        ]
    },

    "network": {
        "interface": "wlan0", // (Optional) To force the use of this interface
        "format": "âš  Disabled",
        "format-wifi": "ï‡« {signalStrength}% {essid} â†‘ {bandwidthUpBits} â†“ {bandwidthDownBits}",
        "format-ethernet": "ïƒ {ifname}: {ipaddr}/{cidr}",
        "format-disconnected": "âš  Disconnected",
        "interval": 1
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ïŠ”",
            "headset": "ïŠ”",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-scroll-up": "$HOME/.config/waybar/scripts/set_voice +1%",
        "on-scroll-down": "$HOME/.config/waybar/scripts/set_voice -1%",
        "on-click-middle": "$HOME/.config/waybar/scripts/set_voice 0",
        "on-click": "pavucontrol"
    },

    "custom/launcher": {
        "format": "ïŒƒ",
        "icon-size": 16,
        "tooltip": false,
        "on-click": "rofi -show drun",
        "on-click-middle": "killall rofi",
        "on-click-right": "wlogout"
    },

    "disk": {
        "interval": 30,
        "format": "ğŸ–« {percentage_used}%",
        "on-click": "nautilus"
    }
}
